<% layout('layouts/boilerplate') -%>

<div class="row">
  <h1 class="text-center">Edit Your Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PATCH"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Name</label>
        <input
          type="text"
          class="form-control"
          id="title"
          placeholder="Enter campground name"
          name="campground[title]"
          value="<%= campground.title %>"
          required
        />
        <div class="invalid-feedback">Please enter campground name</div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          class="form-control"
          id="location"
          placeholder="Enter campground location"
          name="campground[location]"
          value="<%= campground.location %>"
          required
        />
        <div class="invalid-feedback">Please enter campground name</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input
          type="text"
          class="form-control"
          id="image"
          placeholder="Enter image url"
          name="campground[image]"
          value="<%= campground.image %>"
          required
        />
        <div class="invalid-feedback">Please enter campground name</div>
      </div>

      <label for="price" class="form-label">Campground price</label>
      <div class="input-group mb-3">
        <span class="input-group-text" id="price">$</span>
        <input
          type="number"
          class="form-control"
          placeholder="0.00 / night"
          name="campground[price]"
          value="<%= campground.price %>.00"
          required
        />
        <div class="invalid-feedback">Please enter campground name</div>
      </div>

      <label for="description" class="form-label">Campground Description</label>
      <div class="input-group mb-3">
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="campground[description]"
          value=""
          required
        >
<%= campground.description %></textarea
        >
        <div class="invalid-feedback">Please enter campground name</div>
      </div>

      <button type="submit" class="btn btn-success">Accept Changes</button>
    </form>
  </div>
</div>
